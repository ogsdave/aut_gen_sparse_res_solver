function[vars, hiddenvarnum, coeffconsts, sizeofcombs, polycomb, infinitePrec, eqs, theoreticalsolncnt, noofrowstoreduce] = problem_abspose_known_rot_refractive(data)
tic;
%% Formatting the data structures -- coefficients and data 
numOfDataCoeff = 14;

if nargin == 1
    if data == -1
        data = randn(1,numOfDataCoeff);
    else
%         disp('Obtained data vector');
    end
else
    for k = 1:numOfDataCoeff
        syms(strjoin({'c',num2str(k)},''));
        eval(strjoin({'data(',num2str(k),') = ', 'c',num2str(k),';'},''));
    end
end


for k = 1:4
    syms(strjoin({'a',num2str(k)},''));
    eval(strjoin({'xx(',num2str(k),') = ', 'a',num2str(k),';'},''));
end
data = transpose(data);

%% Formatting the data structure

B = transpose([transpose(xx);data]);
p = mat2cell(B,1,ones(1,numel(B)));
if nargout >=7
    eqs = Eqs_problem_abspose_known_rot(p{:});
else
    eqs = [];
end
vars = transpose(xx);
if nargout >= 8
    theoreticalsolncnt = 48;
end
coeffconsts = transpose(data);
hiddenvarnum = 4;
infinitePrec = 2;
sizeofcombs = [2];
noofrowstoreduce = 4;
polycomb=[1;2];
% polycomb = [2;4;5]; % hide a1, and with invertible matrix reduction spresultant size is 145 and eigen solver is of size 155
% polycomb=[];
end